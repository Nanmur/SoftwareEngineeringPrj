
.order-container {
  padding: 20px;
}

/* 刷新按钮容器样式 */
.refresh-button-container {
  position: absolute;
  top: 10px; /* 距离顶部 */
  right: 10px; /* 距离右侧 */
  z-index: 10; /* 保证按钮在最上层 */
}

/* 刷新图标样式 */
.refresh-icon {
  width: 30px; /* 缩小图标尺寸 */
  height: 30px;
}

.section {
  margin-bottom: 20px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 5px;
  font-size: 16px;
  font-weight: bold;
}

.section-title {
  color: #333;
}

.toggle-icon {
  color: #666;
}

.order-item {
  margin-top: 10px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #fff;
}

.order-title {
  display: flex;
  justify-content: space-between;

  font-size: 16px;
  font-weight: bold;
}

.order-status {
  padding: 2px 6px;
  border-radius: 3px;
  font-size: 12px;
  color: white;
}

.order-status.publishing { background-color: gray; }
.order-status.taked { background-color: yellow; color: black; }
.order-status.completed { background-color: green; }
.order-status.overtime { background-color: red; }
.order-status.null { background-color: purple; }

.order-detail {
  margin-top: 10px;
  font-size: 14px;
  color: #555;
}
