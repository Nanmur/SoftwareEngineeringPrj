.container {
  padding: 20px;
}

.page-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.address-item {
  margin-bottom: 10px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f9f9f9;
}

.address-detail {
  font-size: 16px;
  margin-bottom: 5px;
}

.default-label {
  color: green;
  font-size: 14px;
}

.set-default-btn,
.delete-btn {
  margin-right: 5px;
  background-color: #007bff;
  color: #fff;
  padding: 5px 10px;
  border: none;
  border-radius: 5px;
}

.add-btn {
  background-color: #28a745;
  color: #fff;
  padding: 10px;
  border-radius: 5px;
}

.empty-state {
  text-align: center;
  font-size: 16px;
  color: #888;
}

.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  justify-content: center;
  align-items: center;
}

.modal.show {
  display: flex;
}

.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 10px;
  width: 80%;
  max-width: 400px;
}

.modal-title {
  font-size: 18px;
  margin-bottom: 10px;
}

.modal-input {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 5px;
  border: 1px solid #ddd;
}

.modal-checkbox-group {
  margin-bottom: 20px;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
}

.confirm-btn,
.cancel-btn {
  padding: 10px 15px;
  border-radius: 5px;
  border: none;
}

.confirm-btn {
  background-color: #007bff;
  color: white;
}

.cancel-btn {
  background-color: #ccc;
  color: white;
}
.but-grp {
  display: flex;
}
