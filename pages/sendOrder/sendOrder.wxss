.container {
  padding: 20px;
}


.address-section {
  margin-top: 10px;
}

.address-label,
.default-address {
  font-weight: bold;
}

.address-arrow {
  float: right;
}

.user-info {
  margin-top: 5px;
  font-size: 14px;
  color: #666;
}

.order-content {
  margin-top: 15px;
}

.order-title,
.order-description {
  width: 100%;
  margin: 5px 0;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.order-description {
  min-height: 100px;
}

.image-section {
  margin-top: 10px;
}

.image-picker {
  display: flex;
  align-items: center;
}

.camera-icon {
  width: 50px;
  height: 50px;
}

.add-photo {
  margin-left: 10px;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
}

.uploaded-image {
  width: 60px;
  height: 60px;
  margin: 5px;
}

.order-info {
  margin-top: 20px;
}

.order-reward,
.order-timer,
.payment-method {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}

.reward-input,
.time-limit {
  text-align: right;
}

.payment-picker {
  width: 100%;
  text-align: right;
  color: #333;
}

.disclaimer {
  font-size: 12px;
  color: #888;
  margin-top: 10px;
}

.user-agreement {
  color: #d50000;
}

.button-section {
  display: flex;
  justify-content: space-around;
  margin-top: 20px;
}

.confirm-btn {
  background-color: #d50000;
  color: #fff;
  flex: 1;
  height: 40px;
  margin-right: 10px;
}

.cancel-btn {
  background-color: #ddd;
  color: #666;
  flex: 1;
  height: 40px;
}

.phone {
  margin-left: 50rpx;
}
.payment-text{
  height:auto;
  width:170rpx;
}